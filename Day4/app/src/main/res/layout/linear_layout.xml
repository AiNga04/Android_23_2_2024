<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="#5FD664">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#13C3EF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="01"
                android:textColor="#FF5722"
                android:textSize="70dp"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#5FD664">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="02"
                android:textColor="#FF5722"
                android:textSize="70dp"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#F622E1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="03"
                android:textColor="#FF5722"
                android:textSize="70dp"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#5FD664">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="04"
                android:textColor="#FF5722"
                android:textSize="70dp"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#2270F6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="05"
                android:textColor="#FF5722"
                android:textSize="70dp"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="#FB0000">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="06"
                android:textColor="@color/white"
                android:textSize="70dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="#518DF4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="06"
                android:textColor="@color/white"
                android:textSize="70dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            android:background="#F1D907">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="07"
                android:textColor="#FF5722"
                android:textSize="35dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

